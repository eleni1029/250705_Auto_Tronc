  <item ident="WM_ITEM1_1000100000_10006073_1692581370_319170" title="民法買賣契約所規定物之瑕疵擔保責任中 ...">
    <presentation label="民法買賣契約所規定物之瑕疵擔保責任中 ...">
      <flow>
        <material>
          <mattext>&lt;p&gt;&lt;b&gt;&lt;font color="#000000" size="2"&gt;民法買賣契約所規定物之瑕疵擔保責任中，瑕疵之類型有哪幾種？&lt;/font&gt;&lt;/b&gt;&lt;/p&gt;</mattext>
        </material>
        <response_str ident="FIB91" rcardinality="Ordered" rtiming="No">
          <render_fib fibtype="String" prompt="Box" rows="10" columns="50">
            <response_label ident="A"/>
          </render_fib>
        </response_str>
      </flow>
    </presentation>
    <resprocessing>
      <outcomes>
        <decvar vartype="Integer" defaultval="0"/>
      </outcomes>
    </resprocessing>
    <itemfeedback ident="AllCorrect">
