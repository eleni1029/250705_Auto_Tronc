  <item ident="WM_ITEM1_1000100000_10006073_1692581934_357062" title="消費借貸之預約有利息者，於預約成立後 ...">
    <presentation label="消費借貸之預約有利息者，於預約成立後 ...">
      <flow>
        <material>
          <mattext>&lt;p&gt;&lt;b&gt;&lt;font color="#000000" size="2"&gt;消費借貸之預約有利息者，於預約成立後，貸與人得否與撤銷之？&lt;/font&gt;&lt;/b&gt;&lt;/p&gt;</mattext>
        </material>
        <response_str ident="FIB91" rcardinality="Ordered" rtiming="No">
          <render_fib fibtype="String" prompt="Box" rows="10" columns="50">
            <response_label ident="A"/>
          </render_fib>
        </response_str>
      </flow>
    </presentation>
    <resprocessing>
      <outcomes>
        <decvar vartype="Integer" defaultval="0"/>
      </outcomes>
    </resprocessing>
    <itemfeedback ident="AllCorrect">
      <flow_mat>
        <material>
          <mattext>All correct. Well done.</mattext>
        </material>
      </flow_mat>
      <solution>
        <solutionmaterial>
          <material>
            <mattext>&lt;p&gt;答：民法475-1 I，消費借貸之預約，其約定之消費借貸有利息或其他報償，當事人之一方於預約成立後，成為無支付能力者，預約貸與人得撤銷其預約。&lt;/p&gt;</mattext>
          </material>
        </solutionmaterial>
        <wm:refurl>http://</wm:refurl>
      </solution>
