    </wm:class>
  </item>
  <item ident="WM_ITEM1_1000100000_10006073_1692582556_878505" title="甲乙丙共有建地一筆，各有三分之一的應 ...">
    <presentation label="甲乙丙共有建地一筆，各有三分之一的應 ...">
      <flow>
        <material>
          <mattext>&lt;p&gt;&lt;b&gt;&lt;font color="#000000" size="2"&gt;甲乙丙共有建地一筆，各有三分之一的應有部分。甲將其所有的三分之一設定抵押權給銀行，已經辦妥抵押權登記。其後，甲乙丙辦理共有物的協議分割，但是沒有通知銀行。下列關於抵押權的敍述，何者正確？&lt;/font&gt;&lt;/b&gt;&lt;/p&gt;</mattext>
        </material>
        <response_lid ident="ANS01" rcardinality="Single" rtiming="No">
          <render_choice shuffle="Yes">
            <response_label ident="1">
              <flow_mat>
                <material>
                  <mattext>抵押權消滅</mattext>
                </material>
              </flow_mat>
            </response_label>
            <response_label ident="2">
              <flow_mat>
                <material>
                  <mattext>抵押權轉存在於甲分得的土地上</mattext>
                </material>
              </flow_mat>
            </response_label>
            <response_label ident="3">
              <flow_mat>
                <material>
                  <mattext>抵押權存在於甲、乙、丙各自分得的土地上。</mattext>
                </material>
              </flow_mat>
            </response_label>
            <response_label ident="4">
              <flow_mat>
                <material>
                  <mattext/>
                </material>
              </flow_mat>
            </response_label>
          </render_choice>
        </response_lid>
      </flow>
    </presentation>
    <resprocessing>
      <outcomes>
        <decvar vartype="Integer" defaultval="0"/>
      </outcomes>
      <respcondition title="Correct">
        <conditionvar>
          <varequal respident="ANS01">3</varequal>
        </conditionvar>
        <setvar action="Set">1</setvar>
        <displayfeedback feedbacktype="Response" linkrefid="Correct"/>
      </respcondition>
    </resprocessing>
    <itemfeedback ident="Correct">
      <flow_mat>
        <material>
          <mattext/>
        </material>
      </flow_mat>
      <solution>
        <solutionmaterial>
          <material>
            <mattext>&lt;p&gt;説明：應有部分有抵押權或質權者，其權利不因共有物之分割而受影響。但有下列情形之一者，其權利移存於抵押人或出質人所分得之部分：一、權利人同意分割。二、權利人已參加共有物分割訴訟。三、權利人經共有人告知訴訟而未參加。&lt;/p&gt;</mattext>
          </material>
        </solutionmaterial>
        <wm:refurl>http://</wm:refurl>
      </solution>
      <hint enable="false">
        <hintmaterial>
          <material>
            <mattext/>
          </material>
        </hintmaterial>
      </hint>
    </itemfeedback>
